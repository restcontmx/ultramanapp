{
    "name": "ultraman-app",
    "description": "Ultra man administration app.",
    "author": "Ramiro Gutierrez Alaniz",
    "version": "0.9.0",
    "license": "MIT",
    "main": "main.js",
    "scripts": {
        "ng": "ng",
        "start": "node mongodb & ng build && electron main",
        "pack": "build --dir",
        "dist": "build"
    },
    "files": [
        "**/*",
        "dist/*"
    ],
    "build": {
        "appId": "ultramanapp",
        "dmg": {
            "contents": [
                {
                  "x": 110,
                  "y": 150
                },
                {
                    "x": 240,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "win": {
            "target": "NSIS",
            "icon": "build/icon.ico"
        }
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^4.4.4",
        "@angular/common": "^4.2.4",
        "@angular/compiler": "^4.2.4",
        "@angular/core": "^4.2.4",
        "@angular/forms": "^4.2.4",
        "@angular/http": "^4.2.4",
        "@angular/platform-browser": "^4.2.4",
        "@angular/platform-browser-dynamic": "^4.2.4",
        "@angular/router": "^4.2.4",
        "@types/moment": "^2.13.0",
        "cookie-parser": "^1.4.3",
        "core-js": "^2.4.1",
        "express": "^4.16.1",
        "moment": "^2.18.1",
        "mongoose": "^4.12.1",
        "morgan": "^1.9.0",
        "ng-pick-datetime": "^5.0.0-beta.9",
        "ngx-cookie-service": "^1.0.9",
        "rxjs": "^5.4.2",
        "serve-favicon": "^2.4.5",
        "zone.js": "^0.8.14"
    },
    "devDependencies": {
        "@angular/cli": "1.4.3",
        "@angular/compiler-cli": "^4.2.4",
        "@angular/language-service": "^4.2.4",
        "@types/jasmine": "~2.5.53",
        "@types/jasminewd2": "~2.0.2",
        "@types/node": "~6.0.60",
        "codelyzer": "~3.1.1",
        "electron-builder": "^19.34.2",
        "jasmine-core": "~2.6.2",
        "jasmine-spec-reporter": "~4.1.0",
        "karma": "~1.7.0",
        "karma-chrome-launcher": "~2.1.1",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^1.2.1",
        "karma-jasmine": "~1.1.0",
        "karma-jasmine-html-reporter": "^0.2.2",
        "protractor": "~5.1.2",
        "ts-node": "~3.2.0",
        "tslint": "~5.3.2",
        "typescript": "~2.3.3"
    }
}